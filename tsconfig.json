{
  "compilerOptions": {
    "target": "ESNEXT",
    "outDir": "dist",
    "module": "commonjs",
    "types": [
      "reflect-metadata"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitThis": true,
    "allowJs": true,
    "noImplicitReturns": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts"]
}

